{
  "mappings": {
    "type": {
      "_all": {
        "store": true,
        "store_term_vectors": true,
        "store_term_vector_offsets": true,
        "store_term_vector_positions": true,
        "store_term_vector_payloads": true,
        "omit_norms": true,
        "analyzer": "standard",
        "search_analyzer": "whitespace",
        "similarity": "my_similarity",
        "fielddata": {
           "format": "paged_bytes"
        }
      }
    }
  },
  "settings": {
    "similarity": {
      "my_similarity": {
        "type": "DFR",
        "basic_model": "g",
        "after_effect": "l",
        "normalization": "h2",
        "normalization.h2.c": "3.0"
      }
    }
  }
}
